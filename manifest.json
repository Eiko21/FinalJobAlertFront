{
    "name": "Job Alert",
    "version": "1.0",
    "description": "Get all your new job notifications in one place.",
    "permissions": ["declarativeContent", "storage", "activeTab", "cookies", "<all_urls>", "tabs"],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "icons": { "64": "images/get_started48.png" },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self'; object-src 'self'"
}